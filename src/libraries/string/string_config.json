{
    "performance": {
        "max_substring_length": 1024,
        "cache_enabled": true,
        "cache_size_limit": 512
    },
    "transformation": {
        "default_case_format": "title_case",
        "enable_unicode_support": true
    },
    "analysis": {
        "max_word_count": 100000,
        "similarity_threshold": 0.75,
        "enable_char_frequency_logging": false
    },
    "security": {
        "sanitize_input": true,
        "max_input_length": 100000,
        "restricted_characters": [
            "<", ">", "{", "}", "|", "$"
        ]
    }
}
