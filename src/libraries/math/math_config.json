{
  "math_library": {
    "precision": {
      "floating_point": 10,
      "matrix_operations": 8
    },
    "resource_management": {
      "memory_limit_mb": 512,
      "threading": {
        "enable_parallel_computation": true,
        "max_threads": 4
      }
    },
    "performance_optimization": {
      "cache_results": true,
      "cache_size_mb": 64,
      "matrix_multiplication_method": "Strassen",
      "trigonometric_approximation": {
        "enable": true,
        "tolerance": 0.0001
      }
    },
    "logging": {
      "log_operations": true,
      "log_level": "INFO",
      "log_file": "/var/log/math_library.log",
      "log_rotation": {
        "enable": true,
        "max_log_size_mb": 10,
        "retention_days": 7
      }
    },
    "security": {
      "enable_input_validation": true,
      "safe_mode": false
    }
  }
}
